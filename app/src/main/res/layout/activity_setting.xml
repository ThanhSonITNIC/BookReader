<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollViewSetting"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/swSeeAdmob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checked="true"
                    android:text="Xem quảng cáo để hỗ trợ chúng tôi"
                    android:textColor="?attr/textcolor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutLine3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_line_space"
                    android:layout_gravity="top"
                    android:background="?attr/tintcolor"
                    android:orientation="vertical"></LinearLayout>

                <Switch
                    android:id="@+id/swThemeDark"
                    android:text="Chế độ ban đêm"
                    android:textColor="?attr/textcolor"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutLine1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_line_space"
                    android:layout_gravity="top"
                    android:background="?attr/tintcolor"
                    android:orientation="vertical"></LinearLayout>

                <SeekBar
                    android:id="@+id/seekBarTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:max="72"
                    android:min="10" />

                <TextView
                    android:id="@+id/txtReviewTextSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="20dp"
                    android:text="Cỡ chữ"
                    android:textColor="?attr/textcolor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/asjdgsajdg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutLine4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_line_space"
                    android:layout_gravity="top"
                    android:background="?attr/tintcolor"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/txtReviewtimerscroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Thời gian cuộn trang"
                    android:textColor="?attr/textcolor" />

                <SeekBar
                    android:id="@+id/seekBarTimerScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:max="60"
                    android:min="5"
                    android:progress="20" />

                <TextView
                    android:id="@+id/txtViewtimerscroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="20 giây"
                    android:textColor="?attr/textcolor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutLine2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_line_space"
                    android:layout_gravity="top"
                    android:background="?attr/tintcolor"
                    android:orientation="vertical"></LinearLayout>

                <Switch
                    android:id="@+id/swRemind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Nhắc nhở"
                    android:textColor="?attr/textcolor" />

                <TimePicker
                    android:id="@+id/pickerTimeRemind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>